
	<!--==========================
    INSIDE HERO SECTION Section
============================-->
	<section class="page-image page-image-contact md-padding">
		<h1 class="text-white text-center">BLOG</h1>
	</section>

	<!--==========================
    Contact Section
============================-->
	<section id="blog" class="md-padding">
		<div class="container">
			<div class="row">
<main id="main" class="col-md-8">
					<div class="blog">
						<div class="blog-img">
							<img class="img-fluid" src="{{post.post_image}}" alt="">
						</div>
						<div class="blog-content">
							<ul class="blog-meta">
								<li><i class="fas fa-user"></i>{{post.author.username}}</li>
								<li><i class="fas fa-clock"></i>{{generateDate post.date 'MMM DD YYYY' }}</li>
								<li><i class="fas fa-comments"></i>57</li>
							</ul>
							<h3>{{post.title}}</h3>
							<p>{{post.content}}</p>
						</div>


						<!-- blog comments -->
						<div class="blog-comments">
							<h3>(1) Yorumlar</h3>

							<!-- comment -->
							<div class="media">
								<div class="media-body">
									<h4 class="media-heading">Eren Peduk<span class="time">2 min ago(Static bir tarih bulunmaktadır.)</span></h4>
									<p>Bu kısım henüz static verilerden oluşmaktadır.</p>
								</div>
							</div>
							<!-- /comment -->

						</div>
						<!-- /blog comments -->

						<!-- reply form -->
						<div class="reply-form">
							<h3>Bir yorum yaz</h3>
							<form>
								<input class="form-control mb-4" type="text" placeholder="İsim">
								<input class="form-control mb-4" type="email" placeholder="Mail">
								<textarea class="form-control mb-4" row="5" placeholder="Yorum"></textarea>
                                
								<button type="submit" class="main-btn">Gönder</button>
							</form>
						</div>
						<!-- /reply form -->
					</div>
				</main>
				<!-- /Main -->
				
				    {{> site-sidebar}}
				
				
				
			</div>

		</div>
	</section>

